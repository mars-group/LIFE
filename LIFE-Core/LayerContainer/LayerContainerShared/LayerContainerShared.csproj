    <Copyright>(c) 2016 - MARS Group</Copyright>
    <VersionPrefix>2.1.2.2</VersionPrefix>
    <Authors>Christian Huening</Authors>
    <TargetFramework>netstandard1.6</TargetFramework>
    <AssemblyName>LayerContainerShared</AssemblyName>
    <PackageId>LayerContainerShared</PackageId>
    <PackageTargetFallback>$(PackageTargetFallback);dnxcore50</PackageTargetFallback>
